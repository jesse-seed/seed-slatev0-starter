/*================ Color Variables ================*/
$color-primary: {{ settings.color_primary }};

// Text colors
$color-body-text: {{ settings.color_body_text }};

// Button colors
$color-btn-primary: #000;
$color-btn-primary-text: #fff;
$color-btn-secondary: #333;
$color-btn-secondary-text: #eee;

// Backgrounds
$color-body: #fff;
$color-drawer-background: color(#000, 0.6);

// Border colors
$color-border: #f6f6f6;

// Helper colors for form error states
$color-disabled: #eee;
$color-disabled-border: #ccc;
$color-error: #e74c3c;
$color-error-bg: #c0392b;
$color-success: #2ecc71;
$color-success-bg: #27ae60;

/*================ Typography Variables ================*/
$font-family-data: (
  'body' Helvetica,
  'header' Helvetica
);

$font-weight-data: (
  'thin' 100,
  'extra-light' 200,
  'light' 300,
  'normal' 400,
  'medium' 500,
  'bold' 700,
  'semi-bold' 600,
  'extra-bold' 800,
  'black' 900
);

$font-size-data: (
  'xs' rem(12px),
  'small' rem(14px),
  'normal' rem(18px),
  'large' rem(20px),
  'xl' rem(30px),
  'base' rem(16px),
  'h1' rem(30px),
  'h2' rem(20px),
  'h3' rem(18px),
  'h4' rem(18px),
  'h5' rem(18px),
  'h6' rem(18px),
  'mobile-input' 1rem // To prevent zooming
);

$line-height-data: (
  'xs' 1,
  'small' 1,
  'normal' 1,
  'medium' 1,
  'large' 1,
  'xl' 1,
  'h1' 1,
  'h2' 1,
  'h3' 1,
  'h4' 1,
  'h5' 1,
  'h6' 1
);

$font-size-base: font-size(base);

$font-weight-normal: font-weight(normal);
$font-weight-bold: font-weight(bold);
$font-weight-header: font-weight(bold);

$font-stack-header: font-family(header);
$font-stack-body: font-family(body);

/*============================================================================
  Grid Breakpoints and Class Names
    - Do not change the variable names
==============================================================================*/
$grid-small: 480px;
$grid-medium: 768px;
$grid-large: 1024px;
$grid-widescreen: 1280px;

$xs: 'xs';                        // 0 ~ 479
$small-up: 'small-up';            // 480 ~ ...
$small: 'small';                  // 480 ~ 767
$small-down: 'small-down';        // 0 ~ 767
$medium-up: 'medium-up';          // 768 ~ ...
$medium: 'medium';                // 768 ~ 1024
$medium-down: 'medium-down';      // 0 ~ 1023
$large-up: 'large-up';            // 1024 ~ ...
$large: 'large';                  // 1024 ~ 1279
$large-down: 'large-down';        // 0 ~ 1279
$medium-large: 'medium-large';    // 768 ~ 1279
$widescreen: 'widescreen';        // 1280 ~ ...

// The `$breakpoints` list is used to build our media queries.
// You can use these in the media-query mixin.

$grid-breakpoints: (
  $xs '(max-width: #{breakpoint($grid-small, -1px)})',
  $small-up '(min-width: #{breakpoint($grid-small)})',
  $small '(min-width: #{breakpoint($grid-small)}) and (max-width: #{breakpoint($grid-medium, -1px)})',
  $small-down '(max-width: #{breakpoint($grid-medium, -1px)})',
  $medium-up '(min-width: #{breakpoint($grid-medium)})',
  $medium '(min-width: #{breakpoint($grid-medium)}) and (max-width: #{breakpoint($grid-large, -1px)})',
  $medium-down '(max-width: #{breakpoint($grid-large, -1px)})',
  $large-up '(min-width: #{breakpoint($grid-large)})',
  $large '(min-width: #{breakpoint($grid-large)}) and (max-width: #{breakpoint($grid-widescreen, -1px)})',
  $large-down '(max-width: #{breakpoint($grid-widescreen, -1px)})',
  $medium-large '(min-width: #{breakpoint($grid-medium)}) and (max-width: #{breakpoint($grid-widescreen, -1px)})',
  $widescreen '(min-width: #{breakpoint($grid-widescreen)})'
);

/*============================================================================
  Generate breakpoint-specific column widths and push classes
    - Default column widths: $breakpoint-has-widths: ($small, $medium-up);
    - Default is no push classes
    - Will not work if `styles/global/grid.scss` is removed
==============================================================================*/
$breakpoint-has-widths: ($xs, $small, $small-down, $medium-up, $medium-down, $medium, $large-up, $large, $widescreen);
$breakpoint-has-push: ($medium-up);

/*================ Spacing Variables ================*/
$spacing-unit: rem(5px);

$spacing-data: (
  'extra-tight' $spacing-unit,
  'tight' $spacing-unit * 2,
  'base' $spacing-unit * 3,
  'loose' $spacing-unit * 4,
  'extra-loose' $spacing-unit * 5,
  'super-loose' $spacing-unit * 6
);

/*================ Sizing Variables ================*/
$width-site: rem(1180px);
$gutter: rem(30px);
$gutter-mobile: rem(15px);
$grid-gutter: rem(30px);
$grid-gutter-mobile: rem(15px);

/*================ Z-Index ================*/
$z-index-dropdown: 2;
$z-index-drawer: 9;
$z-index-modal: 9;
$z-index-skip-to-content: 10000; // really high to be safe of app markup

/*================ SVG ================*/
$svg-select-icon: #{'{{ "ico-select.svg" | asset_url }}'};

/*================ Opacity ================*/
$opacity-link-hover: 0.6;

/*================ Transitions ================*/
$transition-ease: 0.1s cubic-bezier(0.25, 0.1, 0.25, 1);
$transition-link-hover: all 0.25s cubic-bezier(0.25, 0.1, 0.25, 1);
$transition-drawer: all 0.45s cubic-bezier(0.29, 0.63, 0.44, 1);
$transition-slideshow: all 0.6s cubic-bezier(0.44, 0.13, 0.48, 0.87);

/*================ Box Shadow ================*/
$box-shadow-right-bottom: 1px 1px 1px 0 rgba(0, 0, 0, 0.1);
$box-shadow-bottom: 0 1px 1px 0 rgba(0, 0, 0, 0.1);
$box-shadow: 0 2px 16px -2px rgba(121, 121, 121, 0.1);

/*================ Border radius ================*/
$border-radius-circle: 50%;
$border-radius-pill: 999rem;
$border-radius: 0.5rem;
